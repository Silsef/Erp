<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Erp_Blazor</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Connexion
            </NavLink>
        </div>

        <div class="nav-item px-3">

            <div class="nav-link clickable-title" @onclick="ToggleTechMenu">
                <span class="bi bi-wrench" aria-hidden="true"></span> <span class="flex-grow-1">Gestion Technique</span>
                <span class="arrow">@(ExpendTechMenu ? "▼" : "▶")</span>
            </div>

            @if (ExpendTechMenu)
            {
                <div class="sub-menu">
                    <div class="nav-link clickable-subtitle" @onclick="ToggleProjetMenu">
                        <span class="flex-grow-1">Gestion Projet</span>
                        <span class="arrow">@(ExpendProjetMenu ? "▼" : "▶")</span>
                    </div>

                    @if (ExpendProjetMenu)
                    {
                        <div class="sub-sub-menu">
                            <NavLink class="nav-link" href="projets">
                                <span class="small-icon">📄</span> Liste des projets
                            </NavLink>
                            <NavLink class="nav-link" href="projets/nouveau">
                                <span class="small-icon">➕</span> Nouveau projet
                            </NavLink>
                        </div>
                    }

                    <NavLink class="nav-link" href="tech/dashboard">
                        <span class="small-icon">📊</span> Dashboard Tech
                    </NavLink>
                </div>
            }

            <div class="nav-link clickable-title mt-2" @onclick="ToggleAdminMenu">
                <span class="bi bi-person-badge" aria-hidden="true"></span>
                <span class="flex-grow-1">Gestion Admin</span>
                <span class="arrow">@(ExpendAdminMenu ? "▼" : "▶")</span>
            </div>

            @if (ExpendAdminMenu)
            {
                <div class="sub-menu">
                    <NavLink class="nav-link" href="ressourceshumaines">
                        <span class="small-icon">👥</span> Gestion RH
                    </NavLink>

                    <NavLink class="nav-link" href="compta">
                        <span class="small-icon">💰</span> Gestion Comptabilité
                    </NavLink>
                </div>
            }
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    // Tes booléens pour gérer l'état ouvert/fermé
    private bool ExpendTechMenu = false;
    private bool ExpendAdminMenu = false;
    private bool ExpendProjetMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    // Tes méthodes pour basculer l'état
    private void ToggleTechMenu()
    {
        ExpendTechMenu = !ExpendTechMenu;
    }

    private void ToggleAdminMenu()
    {
        ExpendAdminMenu = !ExpendAdminMenu;
    }

    private void ToggleProjetMenu()
    {
        ExpendProjetMenu = !ExpendProjetMenu;
    }
}