@code {
    // Projets
    private List<ProjetDTO> Projetsinternes = new List<ProjetDTO>();
    private List<ProjetDTO> Projetsexternes= new List<ProjetDTO>();
    private List<EntiteDTO> Entites = new List<EntiteDTO>();
    private List<TacheDTO> Taches = new List<TacheDTO>();
    private List<TypeProjetDTO> TypesProjet = new List<TypeProjetDTO>();
    private ProjetDTO? SelectedProjet;
    private TacheDTO? SelectedTache;
    private bool showcreateProjetModal = false;
    private bool showcreateTacheModal = false;
    private ProjetCreateDTO NewProjet = new ProjetCreateDTO();
    private TacheCreateDTO NewTache = new TacheCreateDTO();
    private string ActiveTab = "overview";

    // Calendrier
    private List<FeuilleTempsDTO> FeuillesTemps = new();
    private List<TacheDTO> EmployesDuProjet = new();
    private int SelectedEmployeId;
    private int NumSemaine;
    private int Annee;
    private bool IsLoadingCalendrier = false;
    private DateTime StartOfWeek;
    private DateTime EndOfWeek;
    private List<JourSemaine> JoursSemaine = new();

    // Modal
    private bool ShowModal = false;
    private FeuilleTempsDTO? EditingFeuille;
    private DateTime ModalDate;
    private bool ModalEstMatin;
    private string? ModalCommentaire;

    protected override async Task OnInitializedAsync()
    {
        EntiteState.OnChange += HandleEntiteChanged;
        await GetProjets();
        Entites = await EntiteService.GetAll();
        NewProjet.DateDebut = DateTime.Now;
        NewProjet.Priorite = NiveauPriorite.Normale;

        var now = DateTime.Now;
        NumSemaine = ISOWeek.GetWeekOfYear(now);
        Annee = now.Year;
    }

    private async Task GetProjets()
    {
        int? id = EntiteState.SelectedEntiteId;
        if (id.HasValue) 
        {
            Projetsinternes = await ProjetService.GetProjetsInternesByEntiteId(id.Value);
            Projetsexternes = await ProjetService.GetProjetsExternesByEntiteId(id.Value);
        }
        else
        {
            Projetsinternes = new List<ProjetDTO>();
            Projetsexternes = new List<ProjetDTO>();
        }

        StateHasChanged();
    }
    private async void HandleEntiteChanged()
    {
        await InvokeAsync(async () =>
        {
            await GetProjets();
            StateHasChanged();
        });
    }
    private async void SelectProjet(ProjetDTO projet)
    {
        SelectedProjet = projet;
        ActiveTab = "overview";
        Taches = await TacheService.GetTachesByProjetId(projet.Id);
    }

    private void SelectTache(TacheDTO tache)
    {
        SelectedTache = tache;
    }

    private async Task CreateNewProjet()
    {
        NewProjet = new ProjetCreateDTO
        {
            DateDebut = DateTime.Now,
            Priorite = NiveauPriorite.Normale
        };

        if(TypesProjet.Count == 0)
        {
            TypesProjet = await TypeProjetService.GetAll();
        }

        showcreateProjetModal = true;
    }

    private void CreateNewTache()
    {
        NewTache = new TacheCreateDTO
        {
            DateDebut = DateTime.Now,
            Priorite = NiveauPriorite.Normale
        };
        showcreateTacheModal = true;
    }

    private async Task SaveNewTache()
    {
        if (string.IsNullOrWhiteSpace(NewTache.Nom)) return;

        if (SelectedProjet != null)
        {
            NewTache.ProjetId = SelectedProjet.Id;
        }

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userIdString = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;

            if (int.TryParse(userIdString, out int userId))
            {
                NewTache.EmployeAssigneId = userId;
            }
        }
        try{

            var createdTache = await TacheService.Post(NewTache);
            Taches.Add(createdTache);

            SelectedTache = createdTache; 
            showcreateTacheModal = false;
            await InvokeAsync(StateHasChanged);
        }
        catch(Exception ex)
        {
            Console.WriteLine($"Erreur lors de la création de la tâche : {ex.Message}");
        }
    }

    private string GetPriorityColor(NiveauPriorite p) => p.ToString();

    private async Task SaveNewProjet()
    {
        if (string.IsNullOrWhiteSpace(NewProjet.Nom)) return;

        var createdProjet = await ProjetService.Post(NewProjet);

        GetProjets();

        SelectedProjet = createdProjet;

        showcreateProjetModal = false;
    }

    private string GetClassForProjet(ProjetDTO p)
    {
        return p == SelectedProjet ? "project-item active" : "project-item";
    }

    // ==================== CALENDRIER ====================

    private async void InitCalendrier()
    {
        if (SelectedProjet == null) return;

        EmployesDuProjet = SelectedProjet.Taches
            .Where(t => t.EmployeAssigneId.HasValue)
            .GroupBy(t => t.EmployeAssigneId)
            .Select(g => g.First())
            .ToList();

        if (EmployesDuProjet.Any())
        {
            SelectedEmployeId = EmployesDuProjet.First().EmployeAssigneId ?? 0;
            await LoadCalendrierData();
        }
    }

    private async Task LoadCalendrierData()
    {
        if (SelectedEmployeId == 0) return;

        IsLoadingCalendrier = true;
        StateHasChanged();

        try
        {
            FeuillesTemps = await FeuilleTempsService.GetBySemaine(SelectedEmployeId, NumSemaine, Annee, SelectedProjet.Id);

            Console.WriteLine($"Chargement : {FeuillesTemps.Count} feuilles de temps");
            foreach (var ft in FeuillesTemps)
            {
                Console.WriteLine($"  - Date: {ft.Date:yyyy-MM-dd}, Matin: {ft.EstMatin}, Projet: {ft.ProjetNom}");
            }

            CalculateDates();

            Console.WriteLine($"Période : {StartOfWeek:yyyy-MM-dd} à {EndOfWeek:yyyy-MM-dd}");
        }
        finally
        {
            IsLoadingCalendrier = false;
            StateHasChanged(); 
        }
    }

    private void CalculateDates()
    {
        var jan4 = new DateTime(Annee, 1, 4);
        int daysOffset = jan4.DayOfWeek == DayOfWeek.Sunday ? 6 : (int)jan4.DayOfWeek - 1;
        var firstMonday = jan4.AddDays(-daysOffset);

        StartOfWeek = firstMonday.AddDays((NumSemaine - 1) * 7);
        EndOfWeek = StartOfWeek.AddDays(4);

        JoursSemaine = new List<JourSemaine>
        {
            new JourSemaine { Nom = "Lundi", Date = StartOfWeek },
            new JourSemaine { Nom = "Mardi", Date = StartOfWeek.AddDays(1) },
            new JourSemaine { Nom = "Mercredi", Date = StartOfWeek.AddDays(2) },
            new JourSemaine { Nom = "Jeudi", Date = StartOfWeek.AddDays(3) },
            new JourSemaine { Nom = "Vendredi", Date = StartOfWeek.AddDays(4) }
        };
    }

    private async Task GoToCurrentWeek()
    {
        var now = DateTime.Now;
        NumSemaine = ISOWeek.GetWeekOfYear(now);
        Annee = now.Year;
        await LoadCalendrierData(); 
        StateHasChanged();
    }

    private RenderFragment RenderCell(DateTime date, bool estMatin) => builder =>
    {
        var feuille = FeuillesTemps.FirstOrDefault(f =>
            f.Date.Date == date.Date && f.EstMatin == estMatin);

        var cellClass = feuille != null ? "calendar-cell filled" : "calendar-cell empty";

        builder.OpenElement(0, "div");
        builder.AddAttribute(1, "class", cellClass);
