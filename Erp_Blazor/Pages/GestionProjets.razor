@page "/projets"
@using Erp_Blazor.Service.States
@using Shared_Erp.Entite
@using Shared_Erp.Enums
@using Shared_Erp.Tache
@using Shared_Erp.Employe
@using Shared_Erp.FeuilleTemps
@using System.Globalization
@inject IProjetService ProjetService
@inject ITypeProjetService TypeProjetService
@inject IEntiteService EntiteService
@inject IFeuilleTempsService FeuilleTempsService
@inject IEmployeService EmployeService
@inject ITacheService TacheService
@attribute [Authorize]
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Shared_Erp.TypeProjet
@inject AuthenticationStateProvider AuthStateProvider
@implements IDisposable
@inject EntiteState EntiteState

<h3>Gestion des Projets</h3>

<div class="layout-container">

    <div class="project-list-sidebar">
        <h5 class="text-center mb-3">Mes Projets</h5>

        @if (Projetsexternes == null && Projetsinternes == null)
        {
            <p class="text-center">Chargement...</p>
        }
        else
        {

            <p>Projets internes</p>
            @foreach (var projet in Projetsinternes)
            {
                <div class="@GetClassForProjet(projet)" @onclick="() => SelectProjet(projet)">
                    @projet.Nom
                </div>
            }

            <p>Projets externes</p>
            @foreach (var projet in Projetsexternes)
            {
                <div class="@GetClassForProjet(projet)" @onclick="() => SelectProjet(projet)">
                    @projet.Nom
                </div>
            }

        }

        <button class="btn btn-sm btn-outline-light mt-3 w-100" @onclick="CreateNewProjet">
            <i class="bi bi-plus-lg"></i> + Nouveau Projet
        </button>
    </div>

    <div class="project-content-area">
        @if (SelectedProjet == null)
        {
            <div class="alert alert-info mt-4">
                Veuillez sélectionner un projet à gauche pour voir les détails.
            </div>
        }
        else
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@SelectedProjet.Nom</h2>
                <span class="badge bg-secondary">
                    @((NiveauPriorite)SelectedProjet.Priorite)
                </span>
            </div>

            <ul class="nav nav-tabs project-tabs">
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "overview" ? "active" : "")"
                       @onclick='() => ActiveTab = "overview"' style="cursor: pointer;">
                        Overview
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "taches" ? "active" : "")"
                       @onclick='() => ActiveTab = "taches"' style="cursor: pointer;">
                        Tâches
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "calendrier" ? "active" : "")"
                       @onclick='() => { ActiveTab = "calendrier"; InitCalendrier(); }' style="cursor: pointer;">
                        Calendrier
                    </a>
                </li>
            </ul>

            <div class="tab-content mt-3">

                @if (ActiveTab == "overview")
                {
                    <div class="animate fade-in">
                        <h4>Informations Générales</h4>
                        <p><strong>Description :</strong> @SelectedProjet.Description</p>
                        <p><strong>Description :</strong> @SelectedProjet.TypeProjetNom</p>

                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Début :</strong> @SelectedProjet.DateDebut.ToShortDateString()</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Fin :</strong> @(SelectedProjet.DateFin?.ToShortDateString() ?? "En cours")</p>
                            </div>
                        </div>
                    </div>
                }

                @if (ActiveTab == "taches")
                {
                    @if (SelectedTache != null)
                    {
                        <div class="animate fade-in">
                            <div class="d-flex align-items-center mb-4">
                                <button class="btn btn-outline-secondary btn-sm me-3" @onclick="() => SelectedTache = null">
                                    <i class="bi bi-arrow-left"></i> Retour
                                </button>
                                <h3 class="m-0">@SelectedTache.Nom</h3>
                                <span class="ms-3 badge rounded-pill bulle-priority-@GetPriorityColor(SelectedTache.Priorite)">
                                    @SelectedTache.Priorite
                                </span>
                            </div>

                            <div class="card shadow-sm border-0">
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-md-8">
                                            <h5 class="text-muted mb-3">Description</h5>
                                            <p>@(string.IsNullOrEmpty(SelectedTache.Description) ? "Aucune description" : SelectedTache.Description)</p>
                                        </div>
                                        <div class="col-md-4 border-start">
                                            <h5 class="text-muted mb-3">Informations</h5>

                                            <div class="mb-2">
                                                <i class="bi bi-person-circle me-2 text-primary"></i>
                                                <strong>Assigné à :</strong>
                                                <span class="d-block ms-4">@(SelectedTache.EmployeAssigneNom ?? "Non assigné")</span>
                                            </div>

                                            <div class="mb-2">
                                                <i class="bi bi-calendar-event me-2 text-primary"></i>
                                                <strong>Dates :</strong>
                                                <span class="d-block ms-4">
                                                    du @SelectedTache.DateDebut.ToShortDateString()
                                                    @if (SelectedTache.DateFin.HasValue)
                                                    {
                                                        <span> au @SelectedTache.DateFin.Value.ToShortDateString()</span>
                                                    }
                                                </span>
                                            </div>

                                            <div class="mb-2">
                                                <i class="bi bi-flag me-2 text-primary"></i>
                                                <strong>Statut :</strong>
                                                <span class="d-block ms-4">@SelectedTache.Statut.ToString().Replace(",","")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="task-grid animate fade-in">
                            @foreach (var tache in Taches)
                            {
                                <div class="task-card priority-@GetPriorityColor(tache.Priorite)" @onclick="() => SelectTache(tache)">
                                    <div class="task-header">
                                        <span class="task-title">@tache.Nom</span>
                                        <span class="badge rounded-pill bulle-priority-@GetPriorityColor(tache.Priorite)">
                                            @tache.Priorite
                                        </span>
                                    </div>

                                    <div class="task-meta">
                                        <div class="task-meta-item">
                                            <i class="bi bi-person-circle"></i>
                                            <span>@(tache.EmployeAssigneNom ?? "Non assigné")</span>
                                        </div>
                                        <div class="task-meta-item">
                                            <i class="bi bi-calendar-event"></i>
                                            <span>@tache.DateDebut.ToShortDateString()</span>
                                        </div>
                                        @if (tache.Statut != StatutTache.A_Faire)
                                        {
                                            <div class="task-meta-item bulle-priority-@GetPriorityColor(tache.Priorite)">
                                                <i class="bi bi-info-circle "></i>
                                                <span class="">@tache.Statut.ToString().Replace("_","")</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="task-card add-task-card" @onclick="CreateNewTache">
                                <i class="bi bi-plus-circle fs-2 mb-2"></i>
                                <span>Nouvelle Tâche</span>
                            </div>
                        </div>
                    }
                }

                @if (ActiveTab == "calendrier")
                {
                    <div class="calendrier-container">
                        <div class="calendrier-header">
                            <h3>📅 Feuilles de temps - @SelectedProjet.Nom</h3>

                            <div class="controls-row">
                                <div class="control-group">
                                    <label>Employé :</label>
                                    <select class="form-select" @bind="SelectedEmployeId" @bind:after="LoadCalendrierData">
                                        @foreach (var emp in EmployesDuProjet)
                                        {
                                            <option value="@emp.EmployeAssigneId">@emp.EmployeAssigneNom</option>
                                        }
                                    </select>
                                </div>

                                <!-- Sélection de la semaine -->
                                <div class="control-group">
                                    <label>Semaine :</label>
                                    <input type="number" class="form-control" min="1" max="53"
                                           @bind="NumSemaine" @bind:after="LoadCalendrierData" />
                                </div>

                                <!-- Sélection de l'année -->
                                <div class="control-group">
                                    <label>Année :</label>
                                    <input type="number" class="form-control"
                                           @bind="Annee" @bind:after="LoadCalendrierData" />
                                </div>

                                <button class="btn btn-primary" @onclick="GoToCurrentWeek">
                                    Semaine actuelle
                                </button>
                            </div>

                            <!-- Affichage de la période -->
                            <div class="periode-display">
                                Du @StartOfWeek.ToString("dd/MM/yyyy") au @EndOfWeek.ToString("dd/MM/yyyy")
                            </div>
                        </div>

                        @if (IsLoadingCalendrier)
                        {
                            <div class="text-center my-5">
                                <div class="spinner-border text-primary"></div>
                            </div>
                        }
                        else
                        {
                            <div class="calendar-grid">
                                <!-- En-têtes des jours -->
                                <div class="calendar-header-cell corner-cell"></div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    <div class="calendar-header-cell day-header">
                                        <div class="day-name">@jour.Nom</div>
                                        <div class="day-date">@jour.Date.ToString("dd/MM")</div>
                                    </div>
                                }

                                <!-- Ligne Matin -->
                                <div class="calendar-row-header">Matin</div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    @RenderCell(jour.Date, true)
                                }

                                <!-- Ligne Après-midi -->
                                <div class="calendar-row-header">Après-midi</div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    @RenderCell(jour.Date, false)
                                }
                            </div>
                        }
                    </div>

                    <!-- Modal pour créer/éditer une feuille de temps -->
                    @if (ShowModal)
                    {
                        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            @(EditingFeuille == null ? "Ajouter" : "Modifier") une feuille de temps
                                        </h5>
                                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Date</label>
                                            <input type="date" class="form-control" @bind="ModalDate" disabled />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Période</label>
                                            <input type="text" class="form-control"
                                                   value="@(ModalEstMatin ? "Matin" : "Après-midi")" disabled />
                                        </div>

                                       

                                        
                                            <div class="mb-3">
                                                <label class="form-label">Commentaire</label>
                                                <textarea class="form-control" rows="3" @bind="ModalCommentaire"></textarea>
                                            </div>
                                        
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Annuler</button>
                                        <button type="button" class="btn btn-primary" @onclick="SaveFeuille">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
   
    </div>
</div>

@* --- MODAL DE CRÉATION DE PROJET --- *@
