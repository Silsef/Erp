@page "/projets"
@using Shared_Erp.Entite
@using Shared_Erp.Enums
@using Shared_Erp.Tache
@using Shared_Erp.Employe
@using Shared_Erp.FeuilleTemps
@using System.Globalization
@inject IProjetService ProjetService
@inject IEntiteService EntiteService
@inject IFeuilleTempsService FeuilleTempsService
@inject IEmployeService EmployeService
@attribute [Authorize]

<h3>Gestion des Projets</h3>

<div class="layout-container">

    <div class="project-list-sidebar">
        <h5 class="text-center mb-3">Mes Projets</h5>

        @if (Projets == null)
        {
            <p class="text-center">Chargement...</p>
        }
        else
        {
            @foreach (var projet in Projets)
            {
                <div class="@GetClassForProjet(projet)" @onclick="() => SelectProjet(projet)">
                    @projet.Nom
                </div>
            }
        }

        <button class="btn btn-sm btn-outline-light mt-3 w-100" @onclick="CreateNewProjet">
            <i class="bi bi-plus-lg"></i> + Nouveau Projet
        </button>
    </div>

    <div class="project-content-area">
        @if (SelectedProjet == null)
        {
            <div class="alert alert-info mt-4">
                Veuillez sélectionner un projet à gauche pour voir les détails.
            </div>
        }
        else
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@SelectedProjet.Nom</h2>
                <span class="badge bg-secondary">
                    @((NiveauPriorite)SelectedProjet.Priorite)
                </span>
            </div>

            <ul class="nav nav-tabs project-tabs">
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "overview" ? "active" : "")"
                       @onclick='() => ActiveTab = "overview"' style="cursor: pointer;">
                        Overview
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "taches" ? "active" : "")"
                       @onclick='() => ActiveTab = "taches"' style="cursor: pointer;">
                        Tâches
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == "calendrier" ? "active" : "")"
                       @onclick='() => { ActiveTab = "calendrier"; InitCalendrier(); }' style="cursor: pointer;">
                        Calendrier
                    </a>
                </li>
            </ul>

            <div class="tab-content mt-3">

                @if (ActiveTab == "overview")
                {
                    <div class="animate fade-in">
                        <h4>Informations Générales</h4>
                        <p><strong>Description :</strong> @SelectedProjet.Description</p>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Début :</strong> @SelectedProjet.DateDebut.ToShortDateString()</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Fin :</strong> @(SelectedProjet.DateFin?.ToShortDateString() ?? "En cours")</p>
                            </div>
                        </div>
                    </div>
                }

                @if (ActiveTab == "taches")
                {
                    @foreach (var tache in SelectedProjet.Taches)
                    {
                        <div>
                            <div class="" @onclick="() => SelectTache(tache)">
                                @tache.Nom @tache.EmployeAssigneNom
                            </div>
                        </div>
                    }
                }

                @if (ActiveTab == "calendrier")
                {
                    <div class="calendrier-container">
                        <div class="calendrier-header">
                            <h3>📅 Feuilles de temps - @SelectedProjet.Nom</h3>

                            <div class="controls-row">
                                <!-- Sélection de l'employé (uniquement les employés du projet) -->
                                <div class="control-group">
                                    <label>Employé :</label>
                                    <select class="form-select" @bind="SelectedEmployeId" @bind:after="LoadCalendrierData">
                                        @foreach (var emp in EmployesDuProjet)
                                        {
                                            <option value="@emp.EmployeAssigneId">@emp.EmployeAssigneNom</option>
                                        }
                                    </select>
                                </div>

                                <!-- Sélection de la semaine -->
                                <div class="control-group">
                                    <label>Semaine :</label>
                                    <input type="number" class="form-control" min="1" max="53"
                                           @bind="NumSemaine" @bind:after="LoadCalendrierData" />
                                </div>

                                <!-- Sélection de l'année -->
                                <div class="control-group">
                                    <label>Année :</label>
                                    <input type="number" class="form-control"
                                           @bind="Annee" @bind:after="LoadCalendrierData" />
                                </div>

                                <button class="btn btn-primary" @onclick="GoToCurrentWeek">
                                    Semaine actuelle
                                </button>
                            </div>

                            <!-- Affichage de la période -->
                            <div class="periode-display">
                                Du @StartOfWeek.ToString("dd/MM/yyyy") au @EndOfWeek.ToString("dd/MM/yyyy")
                            </div>
                        </div>

                        @if (IsLoadingCalendrier)
                        {
                            <div class="text-center my-5">
                                <div class="spinner-border text-primary"></div>
                            </div>
                        }
                        else
                        {
                            <div class="calendar-grid">
                                <!-- En-têtes des jours -->
                                <div class="calendar-header-cell corner-cell"></div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    <div class="calendar-header-cell day-header">
                                        <div class="day-name">@jour.Nom</div>
                                        <div class="day-date">@jour.Date.ToString("dd/MM")</div>
                                    </div>
                                }

                                <!-- Ligne Matin -->
                                <div class="calendar-row-header">Matin</div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    @RenderCell(jour.Date, true)
                                }

                                <!-- Ligne Après-midi -->
                                <div class="calendar-row-header">Après-midi</div>
                                @foreach (var jour in JoursSemaine)
                                {
                                    @RenderCell(jour.Date, false)
                                }
                            </div>
                        }
                    </div>

                    <!-- Modal pour créer/éditer une feuille de temps -->
                    @if (ShowModal)
                    {
                        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            @(EditingFeuille == null ? "Ajouter" : "Modifier") une feuille de temps
                                        </h5>
                                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Date</label>
                                            <input type="date" class="form-control" @bind="ModalDate" disabled />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Période</label>
                                            <input type="text" class="form-control"
                                                   value="@(ModalEstMatin ? "Matin" : "Après-midi")" disabled />
                                        </div>

                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                       @bind="ModalEstPresent" id="presentCheck">
                                                <label class="form-check-label" for="presentCheck">
                                                    Présent(e)
                                                </label>
                                            </div>
                                        </div>

                                        @if (ModalEstPresent)
                                        {
                                            <div class="mb-3">
                                                <label class="form-label">Commentaire</label>
                                                <textarea class="form-control" rows="3" @bind="ModalCommentaire"></textarea>
                                            </div>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Annuler</button>
                                        <button type="button" class="btn btn-primary" @onclick="SaveFeuille">Enregistrer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>

@* --- MODAL DE CRÉATION DE PROJET --- *@
@if (showcreateProjetModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Créer un nouveau projet</h5>
                    <button type="button" class="btn-close" @onclick="() => showcreateProjetModal = false"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Nom du projet</label>
                            <input class="form-control" @bind="NewProjet.Nom" placeholder="Ex: Refonte Site Web" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="3" @bind="NewProjet.Description" placeholder="Détails du projet..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date de début</label>
                                <input type="date" class="form-control" @bind="NewProjet.DateDebut" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Priorité</label>
                                <select class="form-select" @bind="NewProjet.Priorite">
                                    @foreach (var niveau in Enum.GetValues(typeof(NiveauPriorite)))
                                    {
                                        <option value="@((int)niveau)">@niveau</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Entité Réalisatrice</label>
                            <select class="form-select" @bind="NewProjet.EntiteRealisatriceId">
                                <option value="">-- Sélectionner une entité --</option>
                                @foreach (var ent in Entites)
                                {
                                    <option value="@ent.Id">@ent.Nom</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Entité Cliente</label>
                            <select class="form-select" @bind="NewProjet.EntiteClienteId">
                                <option value="">-- Sélectionner une entité --</option>
                                @foreach (var ent in Entites)
                                {
                                    <option value="@ent.Id">@ent.Nom</option>
                                }
                            </select>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showcreateProjetModal = false">Annuler</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveNewProjet">Créer Projet</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // Projets
    private List<ProjetDTO> Projets = new List<ProjetDTO>();
    private List<EntiteDTO> Entites = new List<EntiteDTO>();
    private ProjetDTO? SelectedProjet;
    private TacheDTO? SelectedTache;
    private bool showcreateProjetModal = false;
    private ProjetCreateDTO NewProjet = new ProjetCreateDTO();
    private string ActiveTab = "overview";

    // Calendrier
    private List<FeuilleTempsDTO> FeuillesTemps = new();
    private List<TacheDTO> EmployesDuProjet = new();
    private int SelectedEmployeId;
    private int NumSemaine;
    private int Annee;
    private bool IsLoadingCalendrier = false;
    private DateTime StartOfWeek;
    private DateTime EndOfWeek;
    private List<JourSemaine> JoursSemaine = new();

    // Modal
    private bool ShowModal = false;
    private FeuilleTempsDTO? EditingFeuille;
    private DateTime ModalDate;
    private bool ModalEstMatin;
    private bool ModalEstPresent = true;
    private string? ModalCommentaire;

    protected override async Task OnInitializedAsync()
    {
        Projets = await ProjetService.GetAll();
        Entites = await EntiteService.GetAll();

        NewProjet.DateDebut = DateTime.Now;
        NewProjet.Priorite = (int)NiveauPriorite.Normale;

        var now = DateTime.Now;
        NumSemaine = ISOWeek.GetWeekOfYear(now);
        Annee = now.Year;
    }

    private void SelectProjet(ProjetDTO projet)
    {
        SelectedProjet = projet;
        ActiveTab = "overview";
    }

    private void SelectTache(TacheDTO tache)
    {
        SelectedTache = tache;
    }

    private async void CreateNewProjet()
    {
        NewProjet = new ProjetCreateDTO
        {
            DateDebut = DateTime.Now,
            Priorite = (int)NiveauPriorite.Normale
        };
        showcreateProjetModal = true;
    }

    private async Task SaveNewProjet()
    {
        if (string.IsNullOrWhiteSpace(NewProjet.Nom)) return;

        var createdProjet = await ProjetService.Post(NewProjet);
        Projets.Add(createdProjet);
        SelectedProjet = createdProjet;

        showcreateProjetModal = false;
    }

    private string GetClassForProjet(ProjetDTO p)
    {
        return p == SelectedProjet ? "project-item active" : "project-item";
    }

    // ==================== CALENDRIER ====================

    private async void InitCalendrier()
    {
        if (SelectedProjet == null) return;

        // Récupérer tous les employés qui ont des tâches sur ce projet
        EmployesDuProjet = SelectedProjet.Taches
            .Where(t => t.EmployeAssigneId.HasValue)
            .GroupBy(t => t.EmployeAssigneId)
            .Select(g => g.First())
            .ToList();

        if (EmployesDuProjet.Any())
        {
            SelectedEmployeId = EmployesDuProjet.First().EmployeAssigneId ?? 0;
            await LoadCalendrierData();
        }
    }

    private async Task LoadCalendrierData()
    {
        if (SelectedEmployeId == 0) return;

        IsLoadingCalendrier = true;

        try
        {
            FeuillesTemps = await FeuilleTempsService.GetBySemaine(SelectedEmployeId, NumSemaine, Annee);

            // Filtrer uniquement les feuilles de temps liées au projet sélectionné
            FeuillesTemps = FeuillesTemps
                .Where(f => f.ProjetId == SelectedProjet.Id)
                .ToList();

            CalculateDates();
        }
        finally
        {
            IsLoadingCalendrier = false;
        }
    }

    private void CalculateDates()
    {
        var jan4 = new DateTime(Annee, 1, 4);
        int daysOffset = jan4.DayOfWeek == DayOfWeek.Sunday ? 6 : (int)jan4.DayOfWeek - 1;
        var firstMonday = jan4.AddDays(-daysOffset);

        StartOfWeek = firstMonday.AddDays((NumSemaine - 1) * 7);
        EndOfWeek = StartOfWeek.AddDays(4);

        JoursSemaine = new List<JourSemaine>
        {
            new JourSemaine { Nom = "Lundi", Date = StartOfWeek },
            new JourSemaine { Nom = "Mardi", Date = StartOfWeek.AddDays(1) },
            new JourSemaine { Nom = "Mercredi", Date = StartOfWeek.AddDays(2) },
            new JourSemaine { Nom = "Jeudi", Date = StartOfWeek.AddDays(3) },
            new JourSemaine { Nom = "Vendredi", Date = StartOfWeek.AddDays(4) }
        };
    }

    private void GoToCurrentWeek()
    {
        var now = DateTime.Now;
        NumSemaine = ISOWeek.GetWeekOfYear(now);
        Annee = now.Year;
        _ = LoadCalendrierData();
    }

    private RenderFragment RenderCell(DateTime date, bool estMatin) => builder =>
    {
        var feuille = FeuillesTemps.FirstOrDefault(f =>
            f.Date.Date == date.Date && f.EstMatin == estMatin);

        var cellClass = feuille != null ? "calendar-cell filled" : "calendar-cell empty";

        builder.OpenElement(0, "div");
        builder.AddAttribute(1, "class", cellClass);
        builder.AddAttribute(2, "onclick", EventCallback.Factory.Create(this, () => OpenModal(date, estMatin, feuille)));

        if (feuille != null)
        {
            builder.OpenElement(3, "div");
            builder.AddAttribute(4, "class", "cell-content");

            if (feuille.EstPresent)
            {
                builder.OpenElement(5, "div");
                builder.AddAttribute(6, "class", "presence-badge present");
                builder.AddContent(7, "✓ Présent");
                builder.CloseElement();

                if (!string.IsNullOrEmpty(feuille.Commentaire))
                {
                    builder.OpenElement(8, "div");
                    builder.AddAttribute(9, "class", "commentaire");
                    builder.AddContent(10, feuille.Commentaire);
                    builder.CloseElement();
                }
            }
            else
            {
                builder.OpenElement(11, "div");
                builder.AddAttribute(12, "class", "presence-badge absent");
                builder.AddContent(13, "✗ Absent");
                builder.CloseElement();
            }

            builder.CloseElement();
        }
        else
        {
            builder.OpenElement(14, "div");
            builder.AddAttribute(15, "class", "cell-empty-text");
            builder.AddContent(16, "+ Ajouter");
            builder.CloseElement();
        }

        builder.CloseElement();
    };

    private void OpenModal(DateTime date, bool estMatin, FeuilleTempsDTO? feuille)
    {
        EditingFeuille = feuille;
        ModalDate = date;
        ModalEstMatin = estMatin;

        if (feuille != null)
        {
            ModalEstPresent = feuille.EstPresent;
            ModalCommentaire = feuille.Commentaire;
        }
        else
        {
            ModalEstPresent = true;
            ModalCommentaire = null;
        }

        ShowModal = true;
    }

    private void CloseModal()
    {
        ShowModal = false;
        EditingFeuille = null;
    }

    private async Task SaveFeuille()
    {
        try
        {
            if (EditingFeuille != null)
            {
                var updateDto = new FeuilleTempsUpdateDTO
                {
                    Id = EditingFeuille.Id,
                    Commentaire = ModalCommentaire
                };
                await FeuilleTempsService.Put(EditingFeuille.Id, updateDto);
            }
            else
            {
                var createDto = new FeuilleTempsCreateDTO
                {
                    Date = ModalDate,
                    EstMatin = ModalEstMatin,
                    EstPresent = ModalEstPresent,
                    ProjetId = SelectedProjet?.Id,
                    Commentaire = ModalCommentaire
                };
                await FeuilleTempsService.Post(createDto);
            }

            await LoadCalendrierData();
            CloseModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de l'enregistrement : {ex.Message}");
        }
    }

    private class JourSemaine
    {
        public string Nom { get; set; } = "";
        public DateTime Date { get; set; }
    }
}